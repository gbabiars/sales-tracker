{{sales-totals sales=model class="well"}}

<div class="pull-right">
    {{link-to "+ Create New Sale" "sales.new"}}
</div>

<table class="table sales-table">
    <thead>
    <tr>
        <th>Date</th>
        <th>Product</th>
        <th>Volume</th>
        <th>Price</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {{#each sale in model}}
        <tr>
            <td>{{format-date sale.date}}</td>
            <td>{{link-to sale.product.name "products.detail" sale.product}}</td>
            <td>{{format-number sale.volume}}</td>
            <td>{{format-currency sale.price}}</td>
            <td>{{link-to "Edit" "sales.edit" sale}}</td>
        </tr>
    {{/each}}
    </tbody>
</table>